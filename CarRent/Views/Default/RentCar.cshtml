@model List<CarRent.Features.Mediator.Results.CarResults.GetCarQueryResult>
@{
    Layout = null;
}
<!doctype html>
<html lang="en">
<head>
    <title>CarRental</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700;900&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="fonts/icomoon/style.css">

    <link rel="stylesheet" href="~/carrentals-master/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/carrentals-master/css/bootstrap-datepicker.css">
    <link rel="stylesheet" href="~/carrentals-master/css/jquery.fancybox.min.css">
    <link rel="stylesheet" href="~/carrentals-master/css/owl.carousel.min.css">
    <link rel="stylesheet" href="~/carrentals-master/css/owl.theme.default.min.css">
    <link rel="stylesheet" href="~/carrentals-master/fonts/flaticon/font/flaticon.css">
    <link rel="stylesheet" href="~/carrentals-master/css/aos.css">

    <!-- MAIN CSS -->
    <link rel="stylesheet" href="~/carrentals-master/css/style.css">

</head>
<body>
    <div class="site-wrap" id="home-section">
        <div class="site-mobile-menu site-navbar-target">
            <div class="site-mobile-menu-header">
                <div class="site-mobile-menu-close mt-3">
                    <span class="icon-close2 js-menu-toggle"></span>
                </div>
            </div>
            <div class="site-mobile-menu-body"></div>
        </div>
        <header class="site-navbar site-navbar-target" role="banner">

            <div class="container">
                <div class="row align-items-center position-relative">

                    <div class="col-3">
                        <div class="site-logo">
                            <a href="/Default/Index"><strong>CarRental</strong></a>
                        </div>
                    </div>

                    <div class="col-9  text-right">

                        <span class="d-inline-block d-lg-none"><a href="#" class=" site-menu-toggle js-menu-toggle py-5 "><span class="icon-menu h3 text-black"></span></a></span>

                        <nav class="site-navigation text-right ml-auto d-none d-lg-block" role="navigation">
                            <ul class="site-menu main-menu js-clone-nav ml-auto ">
                                <li class="active"><a href="/Default/Index" class="nav-link">Ana Sayfa</a></li>
                                <li><a href="/Default/RentCar" class="nav-link">Araba Kirala</a></li>
                            </ul>
                        </nav>
                    </div>


                </div>
            </div>

        </header>
        <div class="hero inner-page" style="background-image: url('/carrentals-master/images/hero_1_a.jpg');">

            <div class="container">
                <div class="row align-items-end ">
                    <div class="col-lg-5">

                        <div class="intro">
                            <h1><strong>Arabalar</strong></h1>
                            <div class="custom-breadcrumbs"><a href="/Default/Index">Ana Sayfa</a> <span class="mx-2">/</span> <strong>Arabalar</strong></div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
        <div class="site-section bg-light">
            <div class="container">
                <div class="row">
                    <div class="col-lg-7">
                        <h2 class="section-heading"><strong>Arabalar Listesi</strong></h2>
                        <p class="mb-5">Farklı marka ve modellerdeki arabaların detaylı bir listesini bulabilirsiniz. Her araba hakkında kısa bilgiler, teknik özellikler ve kullanıcı yorumları yer almaktadır.</p>
                    </div>
                </div>
                @if(ViewBag.warning != null)
                {
                    <div class="alert alert-warning">@ViewBag.warning</div>
                }
                @if (ViewBag.success != null)
                {
                    <div class="row mb-5">
                        <div class="col-12">
                    <div class="alert alert-success mb-3">@ViewBag.success</div>
                        </div>
                    </div>
                }
                <div class="row">
                    @foreach (var item in Model)
                    {
                        <div class="col-md-6 col-lg-4 mb-4">

                            <div class="listing d-block  align-items-stretch">
                                <div class="listing-img h-100 mr-4">
                                    <img src="@item.ImageUrl" style="height:200px;" alt="Image" class="img-fluid w-100">
                                </div>
                                <div class="listing-contents h-100">
                                    <h3>@item.BrandTitle @item.Model</h3>
                                    <div class="rent-price">
                                        <strong>@item.Price ₺</strong><span class="mx-1">/</span>Günlük
                                    </div>
                                    <div class="d-block d-md-flex mb-3 border-bottom pb-3">
                                        <div class="listing-feature pr-4">
                                            <span class="caption">Vites Türü:</span>
                                            <span class="number">@item.Transmission</span>
                                        </div>
                                        <div class="listing-feature pr-4">
                                            <span class="caption">Yakıt:</span>
                                            <span class="number">@item.Fuel</span>
                                        </div>
                                        <div class="listing-feature pr-4">
                                            <span class="caption">Yolcu:</span>
                                            <span class="number">@item.Passanger</span>
                                        </div>
                                    </div>
                                    <div>
                                        <p>@item.Description</p>
                                        <p class="text-primary" style="cursor:pointer;" data-toggle="modal" data-target="#Modal1-@item.CarId">Tüm özellikleri görüntüle</p>
                                        <p><a href="#" class="btn btn-primary btn-sm">Hemen Kirala</a> </p>
                                       
                                    </div>
                                </div>

                            </div>
                        </div>
                        <div class="modal" id="Modal1-@item.CarId" tabindex="-1">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title fw-bold">@item.BrandTitle @item.Model</h5><br />
                                    </div>
                                    <div class="modal-body">
                                        
                                        <img src="@item.ImageUrl" class="w-100 mb-3" style="height:300px;" />
                                        <div class="card">
                                            <div class="card-header">Araç Özellikleri</div>
                                            <div class="card-body p-3">
                                            <p><span style="font-weight:500">Renk:</span>@item.Color</p>
                                            <p><span style="font-weight:500">Yıl:</span>@item.Year</p>
                                            <p><span style="font-weight:500">Vites Türü:</span>@item.Transmission</p>
                                            <p><span style="font-weight:500">Km:</span>@item.Km</p>
                                            <p><span style="font-weight:500">Yakıt:</span>@item.Fuel</p>
                                            <p><span style="font-weight:500">Koltuk:</span>@item.Seat</p>
                                            <p><span style="font-weight:500">Kapı:</span>@item.Door</p>
                                            <p><span style="font-weight:500">Bagaj Hacmi:</span>@item.Luggage</p>
                                            <p><span style="font-weight:500">Yolcu:</span>@item.Passanger</p>
                                            <p><span style="font-weight:500">Açıklama:</span>@item.Description</p>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Kapat</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
        <footer class="site-footer">
            <div class="container">
                <div class="row">
                    <div class="col-lg-3">
                        <h2 class="footer-heading mb-4">About Us</h2>
                        <p>Far far away, behind the word mountains, far from the countries Vokalia and Consonantia, there live the blind texts. </p>
                        <ul class="list-unstyled social">
                            <li><a href="#"><span class="icon-facebook"></span></a></li>
                            <li><a href="#"><span class="icon-instagram"></span></a></li>
                            <li><a href="#"><span class="icon-twitter"></span></a></li>
                            <li><a href="#"><span class="icon-linkedin"></span></a></li>
                        </ul>
                    </div>
                    <div class="col-lg-8 ml-auto">
                        <div class="row">
                            <div class="col-lg-3">
                                <h2 class="footer-heading mb-4">Quick Links</h2>
                                <ul class="list-unstyled">
                                    <li><a href="#">About Us</a></li>
                                    <li><a href="#">Testimonials</a></li>
                                    <li><a href="#">Terms of Service</a></li>
                                    <li><a href="#">Privacy</a></li>
                                    <li><a href="#">Contact Us</a></li>
                                </ul>
                            </div>
                            <div class="col-lg-3">
                                <h2 class="footer-heading mb-4">Resources</h2>
                                <ul class="list-unstyled">
                                    <li><a href="#">About Us</a></li>
                                    <li><a href="#">Testimonials</a></li>
                                    <li><a href="#">Terms of Service</a></li>
                                    <li><a href="#">Privacy</a></li>
                                    <li><a href="#">Contact Us</a></li>
                                </ul>
                            </div>
                            <div class="col-lg-3">
                                <h2 class="footer-heading mb-4">Support</h2>
                                <ul class="list-unstyled">
                                    <li><a href="#">About Us</a></li>
                                    <li><a href="#">Testimonials</a></li>
                                    <li><a href="#">Terms of Service</a></li>
                                    <li><a href="#">Privacy</a></li>
                                    <li><a href="#">Contact Us</a></li>
                                </ul>
                            </div>
                            <div class="col-lg-3">
                                <h2 class="footer-heading mb-4">Company</h2>
                                <ul class="list-unstyled">
                                    <li><a href="#">About Us</a></li>
                                    <li><a href="#">Testimonials</a></li>
                                    <li><a href="#">Terms of Service</a></li>
                                    <li><a href="#">Privacy</a></li>
                                    <li><a href="#">Contact Us</a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row pt-5 mt-5 text-center">
                    <div class="col-md-12">
                        <div class="border-top pt-5">
                            <p>
                                <!-- Link back to Colorlib can't be removed. Template is licensed under CC BY 3.0. -->
                                Copyright &copy;<script>document.write(new Date().getFullYear());</script> All rights reserved | This template is made with <i class="icon-heart text-danger" aria-hidden="true"></i> by <a href="https://colorlib.com" target="_blank">Colorlib</a>
                                <!-- Link back to Colorlib can't be removed. Template is licensed under CC BY 3.0. -->
                            </p>
                        </div>
                    </div>

                </div>
            </div>
        </footer>
    </div>
    <script src="~/carrentals-master/js/jquery-3.3.1.min.js"></script>
    <script src="~/carrentals-master/js/popper.min.js"></script>
    <script src="~/carrentals-master/js/bootstrap.min.js"></script>
    <script src="~/carrentals-master/js/owl.carousel.min.js"></script>
    <script src="~/carrentals-master/js/jquery.sticky.js"></script>
    <script src="~/carrentals-master/js/jquery.waypoints.min.js"></script>
    <script src="~/carrentals-master/js/jquery.animateNumber.min.js"></script>
    <script src="~/carrentals-master/js/jquery.fancybox.min.js"></script>
    <script src="~/carrentals-master/js/jquery.easing.1.3.js"></script>
    <script src="~/carrentals-master/js/bootstrap-datepicker.min.js"></script>
    <script src="~/carrentals-master/js/aos.js"></script>
    <script src="~/carrentals-master/js/main.js"></script>
</body>
</html>
