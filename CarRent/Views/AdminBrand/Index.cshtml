@model List<CarRent.Features.CQRS.Results.BrandResults.GetBrandQueryResult>
@{
    ViewData["Title"] = "Index";
    ViewData["PageTitle"] = "Markalar";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-md-12">
    <div class="white_shd full margin_bottom_30">
        <div class="full graph_head">
            <div class="heading1 margin_0">
                <h2>Markalar Listesi</h2>
            </div>
        </div>
        <div class="table_section padding_infor_info">
            <div class="table-responsive-sm">
                <table class="table">
                    <thead class="thead-dark">
                        <tr>
                            <th>#</th>
                            <th>Marka Adı</th>
                            <th>Sil</th>
                            <th>Güncelle</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if(Model.Count() > 0)
                        {
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.BrandId</td>
                                    <td>@item.BrandTitle</td>
                                    <td><a href="/AdminBrand/DeleteBrand/@item.BrandId" class="btn btn-danger">Sil</a></td>
                                    <td><a href="/AdminBrand/UpdateBrand/@item.BrandId" class="btn btn-warning">Güncelle</a></td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <div class="alert alert-warning">Listelenecek herhangi bir marka bulunamadı.</div>
                            </tr>
                        }

                        
                    </tbody>
                </table>
                <a href="/AdminBrand/CreateBrand" class="btn btn-primary">Yeni Marka Girişi</a>
            </div>
        </div>
    </div>
</div>
