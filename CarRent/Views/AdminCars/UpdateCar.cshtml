@model CarRent.Features.Mediator.Results.CarResults.GetCarByIdQueryResult
@{
    ViewData["Title"] = "UpdateCar";
    ViewData["PageTitle"] = "Araba Güncelle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-md-12">
    <div class="white_shd full margin_bottom_30">
        <div class="full graph_head">
            <div class="heading1 margin_0">
                <h2>Araba Güncelle</h2>
            </div>
        </div>
        <div class="table_section padding_infor_info">
            <div class="table-responsive-sm">
                <form method="post">
                    <input type="hidden" asp-for="@Model.CarId" />
                    <div class="form-group">
                        <label>Model</label>
                        <input type="text" class="form-control" asp-for="@Model.Model" />
                    </div>
                    <div class="form-group">
                        <label>Renk</label>
                        <input type="text" class="form-control" asp-for="@Model.Color" />
                    </div>
                    <div class="form-group">
                        <label>Marka</label>
                        @Html.DropDownListFor(x => x.BrandId, (SelectList)ViewBag.brandsValues, "Marka Seçiniz..", new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label>Marka</label>
                        @Html.DropDownListFor(x => x.LocationId, (SelectList)ViewBag.locationsValues, "Lokasyon Seçiniz..", new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label>Yıl</label>
                        <input type="text" class="form-control" asp-for="@Model.Year" />
                    </div>
                    <div class="form-group">
                        <label>Vites Türü</label>
                        <input type="text" class="form-control" asp-for="@Model.Transmission" />
                    </div>
                    <div class="form-group">
                        <label>Km</label>
                        <input type="text" class="form-control" asp-for="@Model.Km" />
                    </div>
                    <div class="form-group">
                        <label>Yakıt Türü</label>
                        <input type="text" class="form-control" asp-for="@Model.Fuel" />
                    </div>
                    <div class="form-group">
                        <label>Koltuk</label>
                        <input type="text" class="form-control" asp-for="@Model.Seat" />
                    </div>
                    <div class="form-group">
                        <label>Kapı</label>
                        <input type="text" class="form-control" asp-for="@Model.Door" />
                    </div>
                    <div class="form-group">
                        <label>Bagaj</label>
                        <input type="text" class="form-control" asp-for="@Model.Luggage" />
                    </div>
                    <div class="form-group">
                        <label>Yolcu</label>
                        <input type="text" class="form-control" asp-for="@Model.Passanger" />
                    </div>
                    <div class="form-group">
                        <label>Görsel Link</label>
                        <input type="text" class="form-control" asp-for="@Model.ImageUrl" />
                    </div>
                    <div class="form-group">
                        <label>Fiyat</label>
                        <input type="text" class="form-control" asp-for="@Model.Price" />
                    </div>
                    <div class="form-group">
                        <label>Açıklama</label>
                        <textarea class="form-control" asp-for="@Model.Description" cols="5" rows="5"></textarea>
                    </div>
                    <button type="submit" class="btn btn-warning">Güncelle</button>
                </form>
            </div>
        </div>
    </div>
</div>