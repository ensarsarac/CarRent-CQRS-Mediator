@model List<CarRent.Features.CQRS.Results.LocationResults.GetLocationQueryResult>

@{
    ViewData["Title"] = "Index";
    ViewData["PageTitle"] = "Lokasyonlar";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="col-md-12">
    <div class="white_shd full margin_bottom_30">
        <div class="full graph_head">
            <div class="heading1 margin_0">
                <h2>Lokasyonlar Listesi</h2>
            </div>
        </div>
        <div class="table_section padding_infor_info">
            <div class="table-responsive-sm">
                <table class="table">
                    <thead class="thead-dark">
                        <tr>
                            <th>#</th>
                            <th>Lokasyon Adı</th>
                            <th>Sil</th>
                            <th>Güncelle</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Count() > 0)
                        {
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.LocationId</td>
                                    <td>@item.LocationTitle</td>
                                    <td><a href="/AdminLocation/DeleteLocation/@item.LocationId" class="btn btn-danger">Sil</a></td>
                                    <td><a href="/AdminLocation/UpdateLocation/@item.LocationId" class="btn btn-warning">Güncelle</a></td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <div class="alert alert-warning">Listelenecek herhangi bir lokasyon bulunamadı.</div>
                            </tr>
                        }


                    </tbody>
                </table>
                <a href="/AdminLocation/CreateLocation" class="btn btn-primary">Yeni Lokasyon Girişi</a>
            </div>
        </div>
    </div>
</div>
